{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build",
                "^db:generate"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ],
            "env": [
                "POSTGRES_PRISMA_URL",
                "POSTGRES_URL_NON_POOLING",
                "NEXT_PUBLIC_APP_URL"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "dev": {
            "dependsOn": [
                "^db:generate"
            ],
            "cache": false,
            "persistent": true
        },
        "db:generate": {
            "cache": false
        },
        "db:migrate": {
            "cache": false,
            "persistent": true
        },
        "db:deploy": {
            "cache": false
        }
    }
}