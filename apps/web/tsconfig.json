{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@db/*": [
        "../../packages/db/src/*"
      ],
      "@ai/*": [
        "../../packages/ai/src/*"
      ],
      "@logger/*": [
        "../../packages/logger/src/*"
      ]
